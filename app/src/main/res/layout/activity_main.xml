<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activity_content_labeling_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchActivity"
        android:text="@string/title_activity_content_labeling" />

    <Button
        android:id="@+id/activity_content_grouping_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchActivity"
        android:text="@string/title_activity_content_grouping" />

    <Button
        android:id="@+id/activity_live_region_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchActivity"
        android:text="@string/title_activity_live_region" />

    <Button
        android:id="@+id/activity_expand_touch_area_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchActivity"
        android:text="@string/title_activity_expand_touch_area" />

    <Button
        android:id="@+id/activity_insufficient_contrast_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchActivity"
        android:text="@string/title_activity_insufficient_contrast" />
</LinearLayout>
